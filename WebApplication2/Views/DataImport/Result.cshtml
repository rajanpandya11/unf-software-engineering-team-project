@model WebApplication2.Models.ImportStatus

@{
    ViewBag.Title = "XML Import Results";
}

<h2>Import Results:</h2>

<div class="container-fluid">
    @if (Model != null)
    {
    <h3>Users</h3>
    <table id="users" class="table table-striped table-hover">
        <tr>
            <th>User Name</th>
            <th>Succeded</th>
            <th>Failure Reason</th>
        </tr>
        @foreach (var user in Model.Users)
        {
            <tr class="active">
                <td>@user.Name</td>
                <td>@user.Succeeded</td>
                @if (@user.FailReason != null)
                {
                <td>@user.FailReason</td>
                }
                else
                {
                    <td>N/A</td>
                }
                </tr>
        }
    </table>

    <h3>Projects</h3>
    <table id="projects" class="table table-striped table-hover">
        <tr>
            <th>Project Name</th>
            <th>Succeded</th>
            <th>Failure Reason</th>
        </tr>
        @foreach (var proj in Model.Projects)
        {
            <tr class="active">
                <td>@proj.Name</td>
                <td>@proj.Succeeded</td>
                @if (@proj.FailReason != null)
                {
                    <td>@proj.FailReason</td>
                }
                else
                {
                    <td>N/A</td>
                }
                </tr>
        }
        </table>

        <h3>Tasks</h3>
        <table id="tasks" class="table table-striped table-hover">
            <tr>
                <th>Task Name</th>
                <th>Succeded</th>
                <th>Failure Reason</th>
            </tr>
            @foreach (var task in Model.Tasks)
            {
                <tr class="active">
                    <td>@task.Name</td>
                    <td>@task.Succeeded</td>
                    @if (@task.FailReason != null)
                    {
                        <td>@task.FailReason</td>
                    }
                    else
                    {
                        <td>N/A</td>
                    }
                </tr>
            }
            </table>
    }
    else
    {
        <p>No data returned.</p>
    }


</div>