@model IEnumerable<WebApplication2.Domain.Project>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="container-fluid">
    <table id="projects" class="table table-striped table-hover">
        <tr>
            <th>PID</th>
            <th>Owner ID</th>
            <th>Project Name</th>
            <th>Project Description</th>
            <th>Project Startdate</th>
            <th>Project Duedate</th>
            <th>Project Is Completed</th>
            <th>Project Completion Date</th>
            <th>Project Is Archived</th>
            <th>Project Budget</th>
            <th>Project Spent</th>
        </tr>
        @foreach (var project in Model)
        {
            <tr class="active">
                <td>@project.pid</td>
                <td>@project.Owner</td>
                <td>@project.Name</td>
                <td>@project.Description</td>
                <td>@project.StartedOn</td>
                <td>@project.DueDate</td>
                <td>@project.Completed</td>
                <td>@project.CompletedOn</td>
                <td>@project.Archived</td>
                <td>@project.Budget</td>
                <td>@project.CurrentSpent</td>
            </tr>
        }
    </table>
</div>

